# Database Configuration
DATABASE_URL=postgresql://synvoy_user:your_secure_password@localhost:5432/synvoy

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True

# Environment
ENVIRONMENT=development

# Email Configuration (for contact form)
# Microsoft Graph API via MSAL
MSAL_TENANT_ID=your-tenant-id
MSAL_CLIENT_ID=your-client-id
MSAL_CLIENT_SECRET=your-client-secret
# SENDER_USER: The actual mailbox used for authentication (iman.dorri@synvoy.com)
MSAL_SENDER_USER=iman.dorri@synvoy.com
# FROM_ALIAS: The alias email that appears as "From" (contact@synvoy.com)
MSAL_FROM_ALIAS=contact@synvoy.com
# NO_REPLY_ALIAS: The alias email for verification emails (no-reply@synvoy.com)
MSAL_NO_REPLY_ALIAS=no-reply@synvoy.com
MSAL_NOTIFICATIONS_ALIAS=notifications@synvoy.com
CONTACT_EMAIL=contact@synvoy.com

# Development Tester Code (required for registration during development)
TESTER_CODE=your-tester-code-here 